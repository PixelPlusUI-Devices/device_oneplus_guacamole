<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".BatteryHealthActivity">

    <TextView
        android:id="@+id/batteryHealthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Health: N/A"
        android:textSize="18sp"
        android:layout_gravity="start"
        />

    <TextView
        android:id="@+id/batteryConditionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Condition: N/A"
        android:textSize="18sp"
        android:layout_gravity="start"
        />
    
    <TextView
        android:id="@+id/batteryDesignCapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Designed Cap: N/A"
        android:textSize="18sp"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/batteryTempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Current Cap: N/A"
        android:textSize="18sp"
        android:layout_gravity="start"/>

</LinearLayout>
